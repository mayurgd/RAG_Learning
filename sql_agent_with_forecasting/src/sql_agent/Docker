# Use Ubuntu 22.04 as the base image
FROM ubuntu:22.04

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Update package lists and install prerequisites
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    build-essential \
    curl \
    libssl-dev \
    libffi-dev \
    libbz2-dev \
    libreadline-dev \
    libsqlite3-dev \
    zlib1g-dev \
    ca-certificates \
    wget

# Add Python 3.12 PPA and install Python 3.12
RUN add-apt-repository ppa:deadsnakes/ppa &&
    apt-get update &&
    apt-get install -y python3.12 python3.12-venv python3.12-dev python3-pip

# Set Python 3.12 as the default Python version
RUN ln -sf /usr/bin/python3.12 /usr/bin/python3 &&
    ln -sf /usr/bin/pip3 /usr/bin/pip

# Verify Python installation
RUN python3 --version

# Set working directory
WORKDIR /app

# Copy project files
COPY . /app

# Copy requirements file
COPY /Users/mayurgd/Documents/CodingSpace/RAG_Learning/sql_agent/requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --upgrade pip &&
    pip install -r /app/requirements.txt

# Command to keep container running (or change as needed)
CMD ["/bin/bash"]
